@model List<WebBookmarkBo.Model.BizMessageInfo>

<div class="admin-content">
    <div class="am-g">
        <div class="am-u-sm-12">
            <table class="am-table am-table-striped am-table-hover table-main ">
                <thead>
                    <tr>
                        <th class="table-id">序号</th>
                        <th class="table-main">消息标题</th>
                        <th class="table-date am-hide-sm-only">创建时间</th>
                        <th class="">消息状态</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        int index = 1;
                        foreach (var message in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>
                                    <a href='~/MessageList/ShowMessageContent?messageID=@message.MessageInfoID'>@message.MessageTitle</a>
                                <td>@message.CreateTime</td>
                                <td>
                                    @if (message.IsRead == (int)WebBookmarkBo.Model.MessageReadStatus.Read)
                                    {
                                        <span class="am-icon-check am-text-success">已读</span>
                                    }
                                    else
                                    {
                                        <span class="am-icon-remove am-text-danger">未读</span>
                                    }
                                </td>
                            </tr>
                        
                            index++;
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>